<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Food</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto|Anton" rel="stylesheet">

    <link rel="stylesheet" href="../styles/main.css">
</head>
<body>

    <div class="containerFoodResults">

        <h2>Search Results</h2>

        <ul class="foodResults">

            <!-- DUMMY DATA TO PREVENT API CALL LIMIT -->
            <% for(let i = 0; i < dummy.fields.length; i++) { %>
                <div class="foodResult-<%= i %>">

                    <li><span class="lime">Name:</span> <%= dummy.fields[i].foodName %></li>
                    <li><span class="lime">Calories:</span> <%= dummy.fields[i].calories %> Cal</li>
                    <li><span class="lime">Protein:</span> <%= dummy.fields[i].proteins %> g</li>
                    <li><span class="lime">Carbohydrates:</span> <%= dummy.fields[i].carbohydrates %> g</li>
                    <li><span class="lime">Fat:</span> <%= dummy.fields[i].fats %> g</li>
                    
                </div>

                <input type="radio" name="foodResultChoice">

                <br><br>
            <% } %>

            
            
        </ul>

        <button id="saveSearchedFood">Submit</button>

        <br><br>

        <a href="/">Search For Another Food</a>

    </div>

    <!-- Modal for editing food modal -->
    <div id="foodModal">
        <div class="modalContent">
            <form action="/saveFood" method="POST">
                <label>Edit Food b4 Saving: </label>
                <br><br>
                <label for="newFoodName">Name: </label>
                <input id="newFoodName" type="text" name="foodName" placeholder="Name" value="<%= dummy.fields[0].foodName %>">
                <br><br>
                <label for="newFoodCalories">Calories: </label>
                <input id="newFoodCalories" type="text" name="calories" placeholder="Calories" value="<%= dummy.fields[0].calories %>">
                <br><br>
                <label for="newFoodProteins">Proteins: </label>
                <input id="newFoodProteins" type="text" name="proteins" placeholder="Proteins" value="<%= dummy.fields[0].proteins %>">
                <br><br>
                <label for="newFoodCarbohydrates">Carbohydrates: </label>
                <input id="newFoodCarbohydrates" type="text" name="carbohydrates" placeholder="Carbohydrates" value="<%= dummy.fields[0].carbohydrates %>">
                <br><br>
                <label for="newFoodFats">Fats: </label>
                <input id="newFoodFats" type="text" name="fats" placeholder="Fats" value="<%= dummy.fields[0].fats %>">
                <br><br>
                
                <input class="submit" type="submit" value="Save Custom Food">
                <br><br><br><br>
            </form>
        </div>
    </div>
    

    <script src="../scripts/foodResults.js"></script>

</body>
</html>